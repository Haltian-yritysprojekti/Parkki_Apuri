<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Tekstityyli" parent="TextAppearance.AppCompat" />
    <style name="Button.Cyan" parent="Widget.Material3.Button.IconButton.Filled">
        <item name="colorAccent">@color/teal_700</item>
    </style>
    <style name="cardView_textViewstyle" parent="@android:style/TextAppearance">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#090909</item>

    </style>

    <style name="clickable_tvLocStyle" parent="@android:style/TextAppearance">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAlignment">viewEnd</item>
        <item name="android:textColor">#FBFBFB</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="clickable_tvFreeStyle" parent="@android:style/TextAppearance">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#FBFBFB</item>
        <item name="android:textSize">25sp</item>
    </style>



</resources>