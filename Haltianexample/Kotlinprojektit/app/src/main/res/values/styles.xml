<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Tekstityyli" parent="TextAppearance.AppCompat" />
    <style name="Button.Cyan" parent="Widget.Material3.Button.IconButton.Filled">
        <item name="colorAccent">@color/teal_700</item>
    </style>
    <style name="cardView_textViewstyle" parent="@android:style/TextAppearance">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#090909</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>

    </style>

    <style name="clickable_tvLocStyle" parent="@android:style/TextAppearance">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAlignment">viewEnd</item>
        <item name="android:textColor">#FBFBFB</item>
        <item name="android:textSize">27sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:inputType">textCapWords</item>
    </style>

    <style name="clickable_tvFreeStyle" parent="@android:style/TextAppearance">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#FBFBFB</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="layout_buttonStyle" parent="@android:style/TextAppearance">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:background">@drawable/corners</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

</resources>