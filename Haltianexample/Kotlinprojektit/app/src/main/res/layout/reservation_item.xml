<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/numberTextView"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:background="@drawable/corners"
        android:text="Varaus "
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/startTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Varaus alkoi: " />

    <TextView
        android:id="@+id/endTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Varaus loppuu: " />

    <TextView
        android:id="@+id/parkkiTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Parkkipaikka: " />

    <TextView
        android:id="@+id/rekisteriTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Rekisteri: " />

    <TextView
        android:id="@+id/sijaintiTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Sijainti: " />

    <Button
        android:id="@+id/bu_deleteButton"
        android:layout_width="123dp"
        android:layout_height="26dp"
        android:background="@drawable/cornersred"
        android:focusableInTouchMode="true"
        android:text="@string/varausPoisto"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:focusable="true"
        tools:ignore="TouchTargetSizeCheck" />


</LinearLayout>