<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_height="297dp"
            android:scaleType="centerCrop"
            android:src="@drawable/parkkilogomuokattu" />

        <EditText
            android:id="@+id/email"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_gravity="center"
            android:ems="10"
            android:hint="Sähköpostiosoite"
            android:inputType="textPersonName"
            tools:textStyle="bold" />

        <EditText
            android:id="@+id/password"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ems="10"
            android:hint="Salasana"
            android:layout_marginTop="20dp"
            android:inputType="textPassword"
            tools:textStyle="bold" />

        <Button
            android:id="@+id/login"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/teal_700"
            android:drawableLeft="@drawable/ic_login_icon"
            android:textColor="@color/white"
            android:text="Kirjaudu sisään"
            android:textAlignment="center"
            tools:textStyle="bold" />

        <TextView
            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="260dp"
            android:layout_marginTop="20dp"
            android:drawableTint="@color/teal_700"
            android:drawableLeft="@drawable/ic_register_icon"
            android:text="Rekisteröidy"
            android:textSize="20dp"
            tools:textStyle="bold" />

    </LinearLayout>


    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="invisible"/>

</FrameLayout>